{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strict": false,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "skipLibCheck": true
    },
    "include": [
        "vite.config.*",
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    // 排除不需要 TypeScript 校验的文件
    "exclude": [
        "node_modules"
    ]
}